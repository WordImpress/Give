{
    "name": "impress-org/give",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "description": "GiveWP - a WordPress Donation Plugin and Fundraising Platform",
    "homepage": "https://givewp.com/",
    "require": {
        "composer/installers": "~1.2",
        "tecnickcom/tcpdf": "^6.2",
        "stripe/stripe-php": "^6.41",
        "paypal/paypal-checkout-sdk": "1.0.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpcompatibility/phpcompatibility-wp": "*",
        "wp-coding-standards/wpcs": "*",
        "jetbrains/phpstorm-stubs": "dev-master",
        "humbug/php-scoper": "dev-master"
    },
    "keywords": [
        "wordpress",
        "plugin",
        "donations"
    ],
    "support": {
        "issues": "https://github.com/impress-org/givewp/issues"
    },
    "scripts": {
        "post-install-cmd": [
            "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs || true",
            "@install-codestandards"
        ],
        "post-update-cmd": [
            "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs || true"
        ],
        "install-codestandards": [
            "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ],
        "prefix-dependencies": [
            "composer prefix-paypal",
            "composer du"
        ],
        "prefix-paypal": [
            "@php ./vendor/humbug/php-scoper/bin/php-scoper add-prefix --output-dir=./src/Vendor/Paypal --config=config/php-scoper/paypal.inc.php --force --quiet",
            "mv src/Vendor/Paypal/paypalhttp/lib/PayPalHttp/* src/Vendor/Paypal/paypalhttp/",
            "rm -rf src/Vendor/Paypal/paypalhttp/lib/",
            "mv src/Vendor/Paypal/paypalhttp/ src/Vendor/Paypal/PayPalHttp",
            "mv src/Vendor/Paypal/paypal-checkout-sdk/lib/PayPalCheckoutSdk/* src/Vendor/Paypal/paypal-checkout-sdk",
            "rm -rf src/Vendor/Paypal/paypal-checkout-sdk/lib/",
            "mv src/Vendor/Paypal/paypal-checkout-sdk/ src/Vendor/Paypal/PayPalCheckoutSdk"
        ]
    },
    "autoload": {
        "psr-4": {
            "Give\\": "src/"
        }
    }
}
